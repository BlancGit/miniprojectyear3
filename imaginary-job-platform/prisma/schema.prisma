datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id           Int           @id @default(autoincrement())
  username     String
  email        String        @unique
  password     String
  role         Role?         @relation(fields: [roleId], references: [id])
  roleId       Int?

  jobs         Job[]         @relation("JobOwner")   // One-to-many relation: A user can have many jobs.
  applications Application[] // One-to-many relation: A user can apply for multiple jobs.
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  users       User[]
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String
  reward      String
  employer    User     @relation("JobOwner", fields: [employerId], references: [id])
  employerId  Int

  applications Application[] // One-to-many relation: A job can have multiple applications.
}

model Application {
  id     Int  @id @default(autoincrement())
  jobId  Int
  job    Job  @relation(fields: [jobId], references: [id])
  user   User @relation(fields: [userId], references: [id])
  userId Int
}
