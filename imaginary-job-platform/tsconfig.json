{
  "compilerOptions": {
    "target": "ES6", // Set the target to ES6 for broad compatibility
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true, // Allow CommonJS imports to work seamlessly with ES modules
    "module": "commonjs", // Use CommonJS modules for Node compatibility
    "moduleResolution": "node", // Use node module resolution strategy
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Optional, to resolve paths more easily
    "paths": {
      "@/*": [
        "./*"
      ] // Set up a wildcard alias for easy imports
    },
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
